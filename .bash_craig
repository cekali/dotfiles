function lazygit() {
    git add .
    git commit -a -m "$1"
    git push
}

function timestamp() {
    date
}

alias lazy_wiki='(cd ~/vimwiki; lazygit "$(timestamp)")'
alias lazy_dot='lazygit "$(timestamp)"'

